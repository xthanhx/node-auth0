{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "swc": true
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*", "config"],
  "exclude": ["node_modules"]
}
